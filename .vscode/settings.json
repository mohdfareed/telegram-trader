{
    // python
    "debugpy.debugJustMyCode": false,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        },
    },
    // shell
    "shellcheck.customArgs": [
        "--shell=bash"
    ],
    "shellcheck.exclude": [
        "1071" // allow zsh
    ],
    "shellcheck.ignorePatterns": {
        "*.example": true
    },
    // spelling
    "cSpell.ignorePaths": [
        ".git",
        ".github",
        ".venv",
        ".vscode",
        ".gitignore",
    ],
    "cSpell.words": [
        "EURUSD",
        "healthcheck",
        "METATRADER",
        "pyproject",
        "pytest",
        "venv"
    ],
}
